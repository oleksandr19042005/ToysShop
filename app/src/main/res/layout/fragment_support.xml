<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.support.SupportFragment">

    <TextView
        android:id="@+id/background_support"
        android:layout_width="351dp"
        android:layout_height="494dp"
        android:layout_marginTop="36dp"
        android:background="@drawable/border"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/text_support_header" />

    <TextView
        android:id="@+id/text_support_header"
        android:layout_width="275dp"
        android:layout_height="55dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="68dp"
        android:background="@drawable/border"
        android:text="Contact Support"
        android:gravity="center"
        android:textColor="@color/black"
        android:textSize="32sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/text_phone"
        android:layout_width="275dp"
        android:layout_height="206dp"
        android:layout_below="@id/text_support_header"
        android:layout_marginTop="24dp"
        android:gravity="center_horizontal"
        android:text="@string/msg_support"
        android:textColor="@color/black"
        android:textSize="22sp"
        app:layout_constraintEnd_toEndOf="@+id/background_support"
        app:layout_constraintStart_toStartOf="@+id/background_support"
        app:layout_constraintTop_toTopOf="@+id/background_support" />

    <TextView
        android:id="@+id/msgSupport"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/text_support_header"
        android:layout_marginTop="28dp"
        android:text="Phone: +1234567890"
        android:textColor="@color/black"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="@+id/background_support"
        app:layout_constraintStart_toStartOf="@+id/background_support"
        app:layout_constraintTop_toBottomOf="@+id/text_email" />

    <TextView
        android:id="@+id/text_email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/text_phone"
        android:layout_marginTop="36dp"
        android:text="Email: support@example.com"
        android:textColor="@color/black"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="@+id/background_support"
        app:layout_constraintStart_toStartOf="@+id/background_support"
        app:layout_constraintTop_toBottomOf="@+id/text_phone" />
</androidx.constraintlayout.widget.ConstraintLayout>